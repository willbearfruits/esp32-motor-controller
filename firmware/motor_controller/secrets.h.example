#pragma once

// ============================================================================
// ESP32 Motor Controller - WiFi Credentials
// ============================================================================
// Copy this file to secrets.h and fill in your credentials
// secrets.h is gitignored to protect your credentials

// === Station Mode (connect to existing WiFi) ===
#define WIFI_SSID "YourWiFiSSID"
#define WIFI_PASS "YourWiFiPassword"

// === Access Point Mode (ESP32 creates its own network) ===
#define AP_SSID "MotorController"
#define AP_PASS "motor1234"

// === Network Mode ===
// Set to true for AP mode (ESP32 creates network)
// Set to false for STA mode (ESP32 joins existing network)
#define USE_AP_MODE true

// === mDNS Hostname ===
// Access the controller at http://motor-ctrl.local
#define HOSTNAME "motor-ctrl"

// === OTA Password (optional) ===
// Leave empty string for no password
#define OTA_PASSWORD ""
